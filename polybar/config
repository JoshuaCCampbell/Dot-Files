[bar/top]
width = 100%
height = 30

monitor = ${env:MONITOR}

background = #141021
foreground = #c4b7c5

fixed-center = true

font-0 = Knack Nerd Font:pixelsize=10:weight=bold;0
font-1 = FontAwesome:size=10;0

modules-left = i3
modules-center = spotify
modules-right = wireless-network cpu memory date

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev
bottom = true


[module/i3]
type = internal/i3

pin-workspaces = true
strip-wsnumbers = true
index-sort = true
enable-scroll = false

format = <label-state>
format-padding-right = 2

label-unfocused-foreground = #8a7f8f
label-unfocused-padding = 1

label-focused-foreground = #c16772
label-focused-padding = 1

label-urgent-foreground = #e4b226
label-urgent-padding = 1


[module/cpu]
type = internal/cpu

interval = 1

format = <label>
format-padding = 2

label = CPU: %percentage%%


[module/memory]
type = internal/memory

interval = 1

format = <label>
format-padding = 2

label = MEM: %gb_used% (%percentage_used%%)


[module/wireless-network]
type = internal/network

interface = wlo1

