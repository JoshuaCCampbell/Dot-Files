format-connected-padding = 2

format-disconnected = <label-disconnected>
format-disconnected-padding = 2

label-connected =  %essid%

label-disconnected =  None


[module/date]
type = internal/date

interval = 1

date = %a %b %d, 
time = %I:%M %p

date-alt = %A, %d %B %Y
time-alt = %I:%M %p

format = <label>
format-padding = 2

label =  %date% %time%


[module/spotify]
type = custom/script
exec = ~/.config/polybar/spotify.sh
interval = 1
